<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_best"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="@string/best_practice"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_better"
        app:layout_constraintEnd_toEndOf="@+id/btn_better"
        app:layout_constraintStart_toStartOf="@+id/btn_better"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_better"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/better_practice"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_bad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:text="@string/bad_practice"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_better"
        app:layout_constraintStart_toStartOf="@+id/btn_better"
        app:layout_constraintTop_toBottomOf="@+id/btn_better" />
</androidx.constraintlayout.widget.ConstraintLayout>