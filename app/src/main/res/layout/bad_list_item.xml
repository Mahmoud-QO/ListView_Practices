<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="4dp"
    tools:context=".BadAdapter">

    <ImageView
        android:id="@+id/list_item_imageView"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/list_item_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_imageView"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@id/list_item_imageView" />

    <TextView
        android:id="@+id/list_item_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_imageView"
        android:layout_below="@id/list_item_textView1"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@id/list_item_imageView" />
</RelativeLayout>
